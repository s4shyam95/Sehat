<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp" >

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cmv_arrowGravity="start"
        app:cmv_arrowPosition="left"
        app:cmv_backgroundColor="@color/light_blue_500"
        app:cmv_backgroundColorPressed="@color/icon_disabled"
        app:cmv_contentPadding="3dp"
        app:cmv_cornerRadius="3dp"
        app:cmv_showArrow="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/playpause"
                android:layout_width="@dimen/play_button_size"
                android:layout_height="@dimen/play_button_size"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/play" />

            <SeekBar
                android:id="@+id/progress_bar"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <!--
                 <TextView
                android:id="@+id/mediaTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            -->

        </LinearLayout>
    </me.himanshusoni.chatmessageview.ChatMessageView>

</LinearLayout>