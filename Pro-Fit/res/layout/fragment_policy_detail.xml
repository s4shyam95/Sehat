            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="INCLUSIONS"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/lol78"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:gravity="left"
                android:text="● Day care treatments\n● Benefits if you don't claim\n● Expenses after Discharge\n● Expenses before Admission Health Checkup\n● Emergency ambulance\n● Home hospitalization"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/divider_horizontal_dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="COVERED AFTER 2 YEARS"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/lol79"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:gravity="left"
                android:text="● Benign Tumor\n● Prostrate Condition\n● Joint Surgeries - Degenerative\n● Osteoarthritis\n● Cataract\n● Piles\n● Varicose Veins\n● Genito-Urinary Ailments\n● Gastric Ulcer\n● Hysterectomy\n● Slipped disc\n● Sinus Related Ailments "
                android:textColor="@color/white"
                android:textSize="18sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/divider_horizontal_dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="EXCLUSIONS"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/lol789"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:gravity="left"
                android:text="● Cosmetic Surgery \n● Lasik eye treatmentsn\● Drugs or alcohol abuse \n● Genetic Disorders\n● Self inflicted injuries\n● War related injuries"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:weightSum="100" >

        <Button
            android:id="@+id/claim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="50"
            android:background="@color/sexy_red"
            android:text="START CLAIM"
            android:textColor="@color/white" >
        </Button>

        <Button
            android:id="@+id/renew"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="50"
            android:background="@color/colorAccent"
            android:text="RENEW NOW"
            android:textColor="@color/white" >
        </Button>
    </LinearLayout>

</LinearLayout>