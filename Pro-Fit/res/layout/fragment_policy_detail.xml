            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/divider_horizontal_dark" />

            <TextView
                android:layout_width="match_parent"
